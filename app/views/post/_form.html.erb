<script>
$(function() {
	$('#button').click(function(event) {
		$('#image-prev').addClass('hidden');
	});

	$('#upload-wrapper').fileupload({
		add: function(e, data) {
			$('#button').click(function(event) {
				data.submit();
			});
		},
		progressall: function(e, data) {
			var progress = parseInt(data.loaded / data.total * 100);
			$('#progress .bar').css('width', progress + '%');
			$('#progress .bar').html(progress+ '%');
			if (progress == 100){
				$('#progress .bar').html('Processing');
			}
		},
	});
});
</script>

<% if action_name == "new" && @post.submission_type == "Challenge" %>
  <div class="challenge flex flex-center-xy">
    <%= @challenge.challenge_type.name %> Challenge: <%= @challenge.title %>
    <%= f.hidden_field :submission_type %>
    <%= f.hidden_field :submission_id %>
  </div>
<% end %>
<div class="form">
  <div class="content">
    <%= render 'post/text', f: f %>
    <%= render 'post/image', f: f %>
    <%= render 'post/video', f: f %>
    <%= render 'post/audio', f: f %>
  </div>
  <div class="info">
    <div class="field">
      <%= f.text_area :caption, placeholder: "caption", class: "input captionEditor", data: {behavior: "autocomplete"} %>
    </div>
    <div class="options">
      <div class="view-nsfw flex flex-space-between">
        <div class="wrapper">
          <div class="heading"> NSFW content</div> <br/>
        </div>
        <label class="switch">
          <%= f.check_box :nsfw, id: "hide_nsfw" %>
          <span class="slider"></span>
        </label>
      </div>
      <div class="view-draft flex flex-space-between">
        <div class="wrapper">
          <div class="heading"> Mask as draft </div> <br/>
        </div>
        <label class="switch">
          <%= f.check_box :draft, id: "set_draft" %>
          <span class="slider"></span>
        </label>
      </div>
      <div class="private flex flex-space-between">
        <div class="wrapper">
          <div class="heading">  Private </div> <br/>
        </div>
        <label class="switch">
          <%= f.check_box :private, id: "private" %>
          <span class="slider"></span>
        </label>
      </div>
    </div>
    <div class="buttons">
      <div class="actions">
        <% if action_name == 'edit' %>
          <a href="/post/<%= @post.url%>" data-method="delete" class="delete flex flex-center-xy">
            <%= image_tag 'icons/clear' %>
          </a>
        <% end %>  
        <%= f.submit "Publish", class: "btn ", id: "button" %>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
var editor = new MediumEditor('.captionEditor', {
