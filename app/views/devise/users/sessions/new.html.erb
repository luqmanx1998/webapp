<div id="home-form">
  <div class="login-wrapper flex flex-center-xy">
    <div class="form-wrapper">
      <div class="heading">
        Welcome Back !
      </div>
      <% if alert%>
        <p class="error-message">
          <%= alert %>
        </p>
      <% end %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autocomplete: "email", class: 'input', placeholder: 'Email', required: true, autocomplete: "off"%>  
        </div>
        <div class="field">
          <%= f.password_field :password, autocomplete: "off", class: "input", placeholder: "Password" %>
        </div>
        <div class="actions">
          <%= f.submit "Log in", class: 'btn btn-highlight' %>
        </div>
      <% end %>
      <%= link_to "I forgot my password", new_password_path(resource_name) %>
      <br/>
      <%= link_to '← Back To Homepage', root_path %>
    </div>
  </div>
</div>
