<div id="home-form">
  <div class="invite-wrapper flex flex-center-xy">
    <div class="form-wrapper">
      <div class="heading">
        Who will be the next Chosen One?
      </div>
      <%= form_for resource, :as => resource_name, :url => new_user_invitation_path, :html => {:method => :post} do |f| %>
        <%= devise_error_messages! %>
        <p>You have <%= current_user.invitation_limit %> invites left. </p>
        <% resource.class.invite_key_fields.each do |field| %>
          <br/>
          <%= f.text_field field, class: "input", placeholder: "Email" %>
        <% end -%>
        <p>
          <%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-highlight' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
