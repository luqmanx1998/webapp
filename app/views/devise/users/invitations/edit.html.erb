<div id="home-form">
  <div class="invite-wrapper flex flex-center-xy">
    <div class="form-wrapper">
      <div class="heading">
        Welcome, Chosen One !
      </div>
      <div class="form">
        <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, autocomplete: 'off' } do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :invitation_token, readonly: true %> 
          <div class="field">
            <%= f.text_field :name, class: "input", placeholder: "Name" , autocomplete: 'off', required: true, :maxlength => 24 %>
            <span class="form-label">
              Name
            </span>
          </div>
          <div class="field">
            <%= f.text_field :username, class: "input", placeholder: "Username" , pattern: "[A-Za-z0-9]+", autocomplete: 'off', required: true, :maxlength => 14 %>
            <span class="form-label">
              Username
            </span>
          </div>
          <% if f.object.class.require_password_on_accepting %>
            <div class="field">
              <%= f.password_field :password, autocomplete: "off", class: "input", placeholder: "Password (min. 6 characters)", autocomplete: 'off' %>
            </div>
          <% end %>
          <div class="action">
            <br/>
            <div class="terms">
              <p>By continuing, you are agreeing to our <a href="/wtf/policies/rules" style="text-decoration: underline;">policies</a>.</a></p>
            </div>
            <%= f.submit "Join Indielab", class: 'btn btn-highlight' %>
          </div>
        <% end %>
        <%= link_to '← Back To Homepage', root_path %>
      </div>
    </div>
  </div>
</div>
