<div id="home-form">
  <div class="password-wrapper flex flex-center-xy">
    <div class="form-wrapper">
      <div class="heading">
        Screwed up? We got you !
      </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <% if alert%>
        <p class="error-message">
          <%= alert %>
        </p>
      <% end %>
        <div class="field">
          <%= f.email_field :email, autocomplete: "email", class: 'input', placeholder: 'Email', :required => 'required'%>  
        </div>
        <div class="actions">
          <%= f.submit "HELP!", class: 'btn btn-highlight' %>
        </div>
      <% end %>
      <%= link_to '← Back To Homepage', root_path %>
    </div>
  </div>
</div>
